<%= form_for @user, url: users_login_path, method: :post do |f| %>
  <div class="form-group">
  <%= f.label :email_address, class: 'form-text text-muted' %>
  <%= f.text_field :email_address, class: 'form-text text-muted'%>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  
  <div class="form-group">
  <%= f.label :password , class: 'form-text text-muted' %>
  <%= f.password_field :password, class: 'form-text text-muted' %>
  </div>
  
  <% if flash[:user_errors] %>
    <% flash[:user_errors].each do |error| %>
      <p style='color: red;'><%= error %></p>
    <% end %>
  <% end %>

  <%= f.submit "log in" , class: 'btn btn-primary btn-lg'%>
  <br>
  <br>
  Or <%= link_to(controller: 'sessions', action: 'signup') { 'sign up' } %>
<% end %>